<%= render 'end_users/end_users/end_user_header' %>
<h1><%= current_end_user.name %>の会員編集ページ</h1>

<%= form_for @end_user, url: end_users_end_user_path, method: :patch do |f| %>
  <% if @end_user.errors.any? %>
    <div class="alert-alert-warinig">
      <p class="error-count"><%= @end_user.errors.full_messages.count %>errors prohibited this end_user from being saved:</p>
    </div>
  <ul>
    <% @end_user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>


<div class="field_all">
  <div class="field">
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :introduction %>
    <br>
    <%= f.text_field :introduction %>
  </div>

  <div class="field">
    <%= f.label :profile_image %>
    <br>
    <%= f.attachment_field :profile_image %>
  </div>

  <br>
  <div class="field">
    <%= f.submit 'Update User', class: "button"  %>
  </div>
</div>

<% end %>
<%= render 'end_users/end_users/end_user_footer' %>

<style>

.edit_end_user {
  width:1200px;
  margin:0 auto;
  text-align: center;
}

 #end_user_profile_image {
  margin:0 auto;
}

