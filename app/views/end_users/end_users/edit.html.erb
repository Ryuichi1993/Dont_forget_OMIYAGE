<%= render 'end_users/end_users/end_user_header' %>
<h1><%= current_end_user.name %>の会員編集ページ</h1>

<%= form_for @end_user, url: end_users_end_user_path, method: :patch do |f| %>
	<% if @end_user.errors.any? %>
	<div class="alert-alert-warinig">
		<p class="error-count"><%= @end_user.errors.full_messages.count %>errors prohibited this end_user from being saved:</p>
		<ul>
			<% @end_user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>

    <% end %>
    <div class="field_all">
    <div class="field">
		<%= f.label :name %>
		<br>
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :introduction %>
		<br>
		<%= f.text_field :introduction %>
	</div>
	<div class="field">
    	<%= f.label :profile_image %>
    	<br>
		<%= f.attachment_field :profile_image %>
	</div>
	<br>
	<div class="field">
		<%= f.submit 'Update User', class: "button"  %>
	</div>
</div>
<% end %>

<style>
.edit_end_user{
	width:1200px;
	margin:0 auto;
	text-align: center;
}
#end_user_profile_image {
    margin:0 auto;
}
.button {
  position: relative;
  display: inline-block;
  padding: 0.25em 0.5em;
  text-decoration: none;
  color: #FFF;
  background: #03A9F4;/*色*/
  border: solid 1px #0f9ada;/*線色*/
  border-radius: 4px;
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.2);
  text-shadow: 0 1px 0 rgba(0,0,0,0.2);
}

.button:active {
  /*押したとき*/
  border: solid 1px #03A9F4;
  box-shadow: none;
  text-shadow: none;
}
input[type="text"],
textarea {
    padding: 0.8em;
    outline: none;
    border: 1px solid #DDD;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
    width:500px;
}
textarea {
    width: 300px;
}

input[type="text"]:focus,
texture:focus {
    box-shadow: 0 0 7px #3498db;
    border: 1px solid #3498db;
}
h1{
  text-align: center;
}

</style>