<%= render 'end_users/end_users/end_user_header' %>
<h1>ショップ一覧</h1>

   		<% @place = Shop.new %>
   		<% @shops.each do |s| %>
  		<% @place.prefecture_code = s.prefecture_code %>
	<table>
		<thead>
			<tr>
				<th>店名:<%= s.shop_name %></td>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= link_to end_users_shop_path(s) do %>
					<%= attachment_image_tag s, :shop_image, :fill, 200, 200, fallback: "no_image.jpg", size: '200x200' %><% end %></td>
				<td><%= s.shop_text %>

				<td><p>店舗所在 :<%= @place.prefecture.name %> <%= s.address_city %> <%= s.address_street %> <%= s.address_building %></p>
				<td><p>営業時間 :<%= s.open %>時〜<%= s.close %>時</p></td>
			</tr>
		</tbody>
		<% end %>
	</table>
