<%= render 'end_users/end_users/end_user_header' %>
<h1>商品一覧</h1>

<%= render 'end_users/products/pre_kensaku' %>

<% @product.each do |p| %>
<table>
	<thead>
		<tr>
			<th><%= link_to end_users_product_path(p) do %>
				<%= attachment_image_tag p, :product_image, :fill, 200, 200, fallback: "no_image.jpg", size: '200x200' %><% end %></th>
		</tr>
	<tbody>
		<tr>
			<td>商品名:<%= p.product_name %></td>
			<td>価格:<%= p.product_price %>円</td>
			<td>ショップ名:<%= p.shop.shop_name %></td>
			<td>商品紹介:<%= p.product_text %></td>
		</tr>
	</tbody>
</thead>
<% end %>