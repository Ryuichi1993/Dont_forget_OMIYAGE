<%= render 'admins/tops/header' %>
<h1><%= @product.product_name %>の詳細ページ</h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th><%= attachment_image_tag @product, :product_image, :fill, 200, 200, fallback: "no_image.jpg", size: '200x200' %></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>商品名:<%= @product.product_name %></td>
			<td>商品価格:<%= @product.product_price %>円</td>
			<td>商品説明<%= @product.product_text %></td>
			<td><%= link_to "編集", edit_admins_product_path(@product) %></td>
			<td><%= link_to "削除", admins_product_path(@product), method: :delete %></td>

		</tr>
	</tbody>
</table>
