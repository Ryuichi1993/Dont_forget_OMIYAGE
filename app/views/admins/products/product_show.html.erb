<%= render 'admins/tops/header' %>
<div class="product_all">
	<h1><%= @shop.shop_name %>の商品一覧</h1>
	<div class="product">
	<% @shop.products.each do |p| %>
	<%= attachment_image_tag p, :product_image, :fill, 200, 200, fallback: "no_image.jpg", size: '200x200', class: "product_image1" %>

	<div class="product_int">
		<%= link_to admins_product_path(p) do %>
		<%= p.product_name %>の詳細<% end %>
	</div>
    </div>
	<% end %>

</div>


<style>

.product_all{
   width: 1300px;
   margin: 0 auto;
   text-align:center;
   overflow: hidden;
}


.product {
   float: left;
   text-align: center;
   position: relative;
   padding: 0.25em 0;
 }

 .product:after {
  content: "";
  display: block;
  height: 4px;
  background: -webkit-linear-gradient(left, rgb(230, 90, 90), transparent);
  background: -o-linear-gradient(left, rgb(230, 90, 90), transparent);
  background: linear-gradient(to right, rgb(230, 90, 90), transparent);
  }

 .product_image1 {
  width:300px;
  height:200px;
  margin: 5px;
  display: inline-block;
  color: #fff;
  cursor: pointer;
  transition: all 0.3s ease 0s;
  float: left;
  border-radius: 20px;
  -webkit-border-radius: 20px;
  -moz-border-radius: 20px;
  }

  .product_image1:hover {
  opacity: 0.6;
  }

  p {
  width: 300px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  -o-text-overflow: ellipsis;
  font-style: oblique;
  position: relative;
  }

  h1{
  width:1200px;
  text-shadow: 1px 1px 0 rgba(0,0,0,.2);
  font-size: 40px;
  text-align: center;
  position: relative;
  padding-left: 25px;
  text-align: center;
  margin:0 auto 10px;
  }

  h1:before {
  position: absolute;
  content: '';
  bottom: -3px;
  left: 0;
  width: 0;
  height: 0;
  border: none;
  border-left: solid 15px transparent;
  border-bottom: solid 15px rgb(119, 195, 223);
  }

  h1:after {
  position: absolute;
  content: '';
  bottom: -3px;
  left: 10px;
  width: 100%;
  border-bottom: solid 3px rgb(119, 195, 223);
  }

</style>