<%= render 'producers/producers/header' %>
<h1>商品登録ページ</h1>
<div class="new">
	<%= form_for(@product, url: producers_products_path) do |f| %>
	<% if @product.errors.any? %>
	<div class="alert alert-danger" role class="alert">
		<p class="error-count"><%= @product.errors.full_messages.count %>errors prohibited this product from being saved:</p>
		<ul>
			<% @product.errors.full_messages.each do |message| %>
			<li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<div class="field1">
		<%= f.label :店舗を選択してください %>
		<%= f.collection_select :shop_id, @shop, :id, :shop_name %>
	</div>
	<br>

	<div class="field">
		<%= f.label :product_name, "商品名" %>
		<%= f.text_field :product_name %>
	</div>
	<br>

	<div class="field">
		<%= f.label :product_text, "商品説明" %>
		<%= f.text_field :product_text %>
	</div>
	<br>

	<div class="field">
		<%= f.label :product_price, "商品価格" %>
		<%= f.text_field :product_price %>
	</div>
	<br>

	<div class="field">
		<%= f.label :product_image, "商品画像" %>
		<%= f.attachment_field :product_image %>
	</div>
	<br>
	<div class="field2">
		<%= f.label :category_ids, "カテゴリーを選択してください" %>
		<br>
		<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

		<%= f.hidden_field :producer_id, value: current_producer.id %>
		<br>
		<%= f.submit "送信する", class: "button" %>
	</div>
	<% end %>
</div>



<style>
	.new {
		text-align: justify;
		text-justify: inter-ideograph;

	}

	.field {
		width:250px;
		margin:0 auto;

	}

	.field1 {
		width:350px;
		margin:0 auto;
	}

	.field2 {
		width:600px;
		margin:0 auto;
		text-align: center;
	}

	#product_product_name {
		margin-left:14px;
	}

	h1 {
		text-align: center;
	}

	input[type="checkbox"], input[type="radio"]{
		margin:8px;
	}

	p {
		margin-left: 20px;
		font-size:16px;
		text-decoration: underline;
	}

	.button {
		position: relative;
		display: inline-block;
		padding: 0.25em 0.5em;
		text-decoration: none;
		color: #FFF;
		background: #03A9F4;
		border: solid 1px #0f9ada;
		border-radius: 4px;
		box-shadow: inset 0 1px 0 rgba(255,255,255,0.2);
		text-shadow: 0 1px 0 rgba(0,0,0,0.2);
		margin-top:15px;
	}

	.button:active {
		border: solid 1px #03A9F4;
		box-shadow: none;
		text-shadow: none;
	}

</style>