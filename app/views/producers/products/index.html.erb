
<%= render 'producers/producers/header' %>
<div class="product_box"><h1>商品一覧</h1></div>

<div class="product_all">
<% @product.each do |p| %>
<div class="product_list">
<%= link_to ichiran_producers_product_path(p) do %>
<%= attachment_image_tag p, :product_image, :fill, 200, 200, fallback: "no_image.jpg", size: '200x200', class: "product_image1" %><% end %>

	<div class="product">
	<p>商品名:<%= p.product_name %></p>
  <p><%= link_to "詳細を見る", ichiran_producers_product_path(p) %></p>
	<p><%= link_to "編集", edit_producers_product_path(p) %></p>
	<p><%= link_to "削除", producers_product_path(p), method: :delete %></p></div>
	</div>
	<% end %>
</div>

<style>

.product_box{
 width:82%;
  text-shadow: 1px 1px 0 rgba(0,0,0,.2);
  font-size: 30px;
  text-align: center;
  position: relative;
  padding-left: 25px;
  text-align: center;
  margin:0 auto 10px;
  font-style: oblique;
}

.product_box:before {
  position: absolute;
  content: '';
  bottom: -3px;
  left: 0;
  width: 0;
  height: 0;
  border: none;
  border-left: solid 15px transparent;
  border-bottom: solid 15px rgb(119, 195, 223);
  }
  .product_box:after {
  position: absolute;
  content: '';
  bottom: -3px;
  left: 10px;
  width: 100%;
  border-bottom: solid 3px rgb(119, 195, 223);
}
.product_all{
    width:1300px;
    margin:0 auto;
    overflow: hidden;
}


.product_list {
	float: left;
  text-align: center;
    position: relative;
    padding: 0.25em 0;
}

  .product_list:after {
  content: "";
  display: block;
  height: 4px;
  background: -webkit-linear-gradient(left, rgb(230, 90, 90), transparent);
  background: -o-linear-gradient(left, rgb(230, 90, 90), transparent);
  background: linear-gradient(to right, rgb(230, 90, 90), transparent);
  }
.product_image1{
  width:300px;
  margin: 5px;
  display: inline-block;
  background-color: #4CAF50;
  color: #fff;
  cursor: pointer;
  transition: all 0.3s ease 0s;
      border-radius: 20px;
    -webkit-border-radius: 20px;
    -moz-border-radius: 20px;
}
.product_image1:hover {
  opacity: 0.6;
}
p {
 width: 300px;
 white-space: nowrap;
 overflow: hidden;
 text-overflow: ellipsis;
 -o-text-overflow: ellipsis;
 font-style: oblique;
}
form{
  margin-bottom:20px;
}

</style>