<%= render 'producers/producers/header' %>

  <div class="shop_name"><%= @shop.shop_name %>の詳細ページ</div>

  <div class="shop">
    <div><%= attachment_image_tag @shop, :shop_image, :fill, 200, 200, fallback: "no_image.jpg", size: '200x200' %></div>
    <br>
    <div class="int"><p>店舗紹介: <%= @shop.shop_text %></p>
      <br>
      <% @place = Shop.new %>
      <% @place.prefecture_code = @shop.prefecture_code %>
      <p>店舗所在 :<%= @place.prefecture.name %> <%= @shop.address_city %> <%= @shop.address_street %> <%= @shop.address_building %></p>

      <p>営業時間 :<%= @shop.open %>時〜<%= @shop.close %>時</p>
      <p>定休日 :<%= @shop.regular_holiday %></p>

      <p>最寄り駅: <%= @shop.station %></p>

      <p><%= @shop.station %>から徒歩で 約: <%= @shop.minutes_on_foot %>分</p>

      <p><%= @shop.station %>から車で 約: <%= @shop.minutes_on_car %>分</p>
      <p>電話番号: <%= @shop.phone_number %></p>
    </div>
  </div>

  <div id="map"></div>
  <style>
    #map {
      height: 500px;
      width: 70%;
      margin:0 auto;
    }
  </style>
  <script>
    function initMap() {
      var uluru = {lat: <%= @shop.latitude %>, lng: <%= @shop.longitude %>};
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 16,
        center: uluru
      });
      var marker = new google.maps.Marker({
        position: uluru,
        map: map
      });
    }

  </script>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV["GOOGLE_MAP_API_KEY"]%>&callback=initMap"
    async defer></script>
  </div>
  <style>


  .attachment.shop.shop_image {
    width: 600px;
    height: 340px;
    margin: 0 auto;
    padding-left:30px;
    padding-right: 30px;
    padding-top: 15px;
    float:left;
    vertical-align: top;
  }

  .shop {
    margin: 0 auto;
    width:1200px;
    position: relative;
    padding: 0.25em 0;
  }

  .shop:after {
    content: "";
    display: block;
    height: 4px;
    background: -webkit-linear-gradient(to right, rgb(230, 90, 90), transparent);
    background: linear-gradient(to right, rgb(230, 90, 90), transparent);
  }

  .shop_name {
    width:82%;
    text-shadow: 1px 1px 0 rgba(0,0,0,.2);
    font-size: 30px;
    text-align: center;
    position: relative;
    padding-left: 25px;
    text-align: center;
    margin:0 auto 10px;
    font-style: oblique;
  }

  .shop_name:before {
    position: absolute;
    content: '';
    bottom: -3px;
    left: 0;
    width: 0;
    height: 0;
    border: none;
    border-left: solid 15px transparent;
    border-bottom: solid 15px rgb(119, 195, 223);
  }

  .shop_name:after {
    position: absolute;
    content: '';
    bottom: -3px;
    left: 10px;
    width: 100%;
    border-bottom: solid 3px rgb(119, 195, 223);
  }

  .int {
    font-size:20px;
    display: inline-block;
    vertical-align: top;
  }

  p {
    border-bottom: solid 1px #000;
    font-style: oblique;
  }

  h1 {
    text-align:center;
    font-style: oblique;
  }

</style>