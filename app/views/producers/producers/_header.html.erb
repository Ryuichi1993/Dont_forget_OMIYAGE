<header class="navbar">
  <div class="container_head">
    <nav class="nav navbar-nav navbar-left">
      <span class="title1">Dont Forget OMIYAGE</span>
    </nav>
    <nav class="right">

      <% if producer_signed_in? %>
        <div class="item">
          <%= link_to producers_producer_path(current_producer) do %> Home<% end %>
        </div>

        <div class="item">
          <%= link_to producers_shops_path do %> Shop<% end %>
        </div>

        <div class="item">
         <%= link_to producers_products_path do %> Goods<% end %>
        </div>

        <div class="item"><%= link_to destroy_producer_session_path, method: :delete do %> Log out<% end %>
        </div>


        <!-- ログインしていない状態 -->
      <% else %>
        <div class="item">
          <%= link_to new_producer_session_path do %> Log in<% end %>
        </div>

        <div class="item">
          <%= link_to new_producer_registration_path do %> Log out<% end %>
        </div>
      <% end %>
      </nav>
    </div>
  </header>

    <style>
      .title1{
        color:#FFFFFF;
        font-size:55px;
        font-family: 'Comic Sans MS','Corbel','Javanese Text','Arial',sans-serif;
      }
      a{
        font-family: 'Comic Sans MS','Corbel','Javanese Text','Arial',sans-serif;
      }
      .item{
        color:#FFFFFF;
        float:left;
        text-align: right;
        font-size:25px;
        margin: 20px 10px;
      }
      .nav > li > a{
        position: relative;
        display: block;
        margin: 12px 15px;
        font-size:15px;
      }
      .right{
        float: right !important;
        margin-right: 5px auto;
      }
      .item a:link { color: white; }
      .item a:visited { color: white; }
      .item a:hover { color: white; }
      .item a:active { color: white; }
    </style>