<%= render 'producers/producers/header' %>
<h1>商品一覧</h1>
<%= form_with(url: search_producers_producers_path, method: :get, local: true) do |f| %>
<%= f.label :'SHOPで調べる' %>
<%= f.collection_select :shop_id, Shop.group(:shop_name), :shop_name, :shop_name %>
<%= f.submit "SHOP検索" %>
<% end %>

<h2><%= current_producer.email %>の商品一覧</h2>
<% @product.each do |p| %>
<table>
	<thead>
		<tr>
			<th><%= attachment_image_tag p, :product_image, :fill, 200, 200, fallback: "no_image.jpg", size: '200x200' %></th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td><%= p.product_name %></td>
			<td><%= link_to "編集", edit_producers_product_path(p) %></td>
			<td><%= link_to "削除", producers_product_path(p), method: :delete %></td>
		</tr>
	</tbody>
</table>
<% end %>